{
  "name": "bupy7/doctrine-nested-set",
  "description": "Nested sets for Doctrine ORM",
  "version": "2.0.0",
  "license": "BSD-3-Clause",
  "keywords": [
    "doctrine",
    "orm",
    "nested sets",
    "nested set",
    "php",
    "database"
  ],
  "authors": [
    {
      "name": "Vasily Belosloodcev",
      "email": "vasily.belosloodcev@gmail.com",
      "homepage": "http://mihaly4.ru"
    }
  ],
  "require": {
    "php": "^7.1",
    "doctrine/orm": "^2.6"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.14.0",
    "phpunit/phpunit": "^7.5.2 || ^9.5.4",
    "php-coveralls/php-coveralls": "^2.1.0",
    "doctrine/data-fixtures": "~1.3.1"
  },
  "autoload": {
    "psr-4": {
      "Bupy7\\Doctrine\\NestedSet\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bupy7\\Doctrine\\NestedSet\\Test\\": "test/src"
    }
  },
  "scripts": {
    "test:run": "./vendor/bin/phpunit --debug --no-coverage",
    "test:run:cov": "./vendor/bin/phpunit",
    "cs:fix": "./vendor/bin/php-cs-fixer fix --config=phpcs.php"
  },
  "config": {
    "sort-packages": true
  }
}
